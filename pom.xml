<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
                            
  <groupId>net.sf.emustudio</groupId>
  <artifactId>emustudio-parent</artifactId>
  <version>0.39-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>emuStudio</name>
  <url>http://emustudio.sf.net</url>
  <description>Free, plugin-based software platform for computer emulation</description>

  <scm>
    <developerConnection>scm:git:ssh://github.com/emuStudio.git</developerConnection>
  </scm>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <netbeans.hint.license>gpl20</netbeans.hint.license>
    <distribution.fileMapping>${artifact.artifactId}.${artifact.extension}</distribution.fileMapping>
    <project.build.resourceDirectory>${basedir}/src/main/resources</project.build.resourceDirectory>
  </properties>

  <licenses>
    <license>
      <name>GNU GPL 2</name>
      <url>http://www.gnu.org/licenses/gpl-2.0.txt</url>
      <distribution>manual</distribution>
      <comments>Free software license</comments>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>vbmacher</id>
      <name>Peter Jakubƒço</name>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>
 
  <modules>
    <module>pom-emustudio.xml</module>
    <module>plugins/compilers/as-8080</module>
    <module>plugins/compilers/as-z80</module>
    <module>plugins/compilers/brainc-brainduck</module>
    <module>plugins/compilers/ramc-ram</module>
    <module>plugins/cpu/8080-cpu</module>
    <module>plugins/cpu/z80-cpu</module>
    <module>plugins/cpu/brainduck-cpu</module>
    <module>plugins/cpu/ram-cpu</module>
    <module>plugins/devices/abstractTape-ram</module>
    <module>plugins/devices/adm3A-terminal</module>
    <module>plugins/devices/brainduck-terminal</module>
    <module>plugins/devices/88-disk</module>
    <module>plugins/devices/88-sio</module>
    <module>plugins/devices/simPseudo-z80</module>
    <module>plugins/mem/brainduck-mem</module>
    <module>plugins/mem/ram-mem</module>
    <module>plugins/mem/standard-mem</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <source>1.7</source>
            <target>1.7</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.10</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.easymock</groupId>
        <artifactId>easymock</artifactId>
        <version>3.1</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>cup</groupId>
        <artifactId>java-cup-runtime</artifactId>
        <version>0.11a</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>emuLib</artifactId>
        <version>9.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>1.6.4</version>
      </dependency>
      <dependency>
        <groupId>ch.qos.logback</groupId>
        <artifactId>logback-core</artifactId>
        <version>1.0.3</version>
      </dependency>
      <dependency>
        <groupId>ch.qos.logback</groupId>
        <artifactId>logback-classic</artifactId>
        <version>1.0.3</version>
      </dependency>

      <!-- compilers -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>as-8080</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>as-z80</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>ramc-ram</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>brainc-brainduck</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- devices -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>88-disk</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>88-sio</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>abstractTape-ram</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>adm3A-terminal</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>simhPseudo-z80</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>terminal-brainduck</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- memories -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>ram-mem</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>standard-mem</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>brainduck-mem</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- cpus -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>8080-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>ram-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>z80-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>brainduck-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- emuStudio -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>emuStudio</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>emustudio-repository</id>
      <name>emuStudio Repository</name>
      <url>http://emustudio.sf.net/repository/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>emustudio-plugin-repository</id>
      <name>emuStudio Repository</name>
      <url>http://emustudio.sf.net/repository/</url>
    </pluginRepository>
  </pluginRepositories>

  <distributionManagement>
    <repository>
      <id>emustudio-repository</id>
      <name>emuStudio Repository</name>
      <url>sftp://web.sourceforge.net:/home/project-web/emustudio/htdocs/repository</url>
    </repository>
  </distributionManagement>


</project>
