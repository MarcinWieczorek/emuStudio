  <repositories>
    <repository>
      <id>central</id>
      <url>http://repo.maven.apache.org</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>codehaus</id>
      <url>http://repository.codehaus.org</url>
      <snapshots>
        <enabled>false</enabled>
