<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>release</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeSiteDirectory>false</includeSiteDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>net.sf.emustudio:as-8080</include>
        <include>net.sf.emustudio:as-z80</include>
        <include>net.sf.emustudio:ramc-ram</include>
        <include>net.sf.emustudio:brainc-brainduck</include>
        <include>net.sf.emustudio:as-ssem</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/compilers</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>net.sf.emustudio:88-disk</include>
        <include>net.sf.emustudio:88-sio</include>
        <include>net.sf.emustudio:abstractTape-ram</include>
        <include>net.sf.emustudio:adm3A-terminal</include>
        <include>net.sf.emustudio:simhPseudo-z80</include>
        <include>net.sf.emustudio:brainduck-terminal</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/devices</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>net.sf.emustudio:ram-mem</include>
        <include>net.sf.emustudio:standard-mem</include>
        <include>net.sf.emustudio:brainduck-mem</include>
        <include>net.sf.emustudio:ssem-mem</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/mem</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>net.sf.emustudio:8080-cpu</include>
        <include>net.sf.emustudio:ram-cpu</include>
        <include>net.sf.emustudio:z80-cpu</include>
        <include>net.sf.emustudio:brainduck-cpu</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/cpu</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>net.sf.emustudio:emuStudio</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:emuLib</include>
        <include>com.github.vbmacher:java-cup-runtime</include>
        <include>org.slf4j:slf4j-api</include>
        <include>ch.qos.logback:logback-core</include>
        <include>ch.qos.logback:logback-classic</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>files</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>/</outputDirectory>    
    </fileSet>
    <fileSet>
      <directory>../plugins/compilers/as-8080/examples</directory>
      <directoryMode></directoryMode>
      <includes>
        <include>**/*.asm</include>
        <include>**/*.inc</include>
      </includes>
      <outputDirectory>/examples/as-8080</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../plugins/compilers/as-z80/examples</directory>
      <includes>
        <include>**/*.asm</include>
        <include>**/*.inc</include>
      </includes>
      <outputDirectory>/examples/as-z80</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../plugins/compilers/brainc-brainduck/examples</directory>
      <includes>
        <include>**/*.b</include>
      </includes>
      <outputDirectory>/examples/brainc-brainduck</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../plugins/compilers/ramc-ram/examples</directory>
      <includes>
        <include>**/*.ram</include>
        <include>**/*.txt</include>
        <include>**/*.pdf</include>
      </includes>
      <outputDirectory>/examples/ramc-ram</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
