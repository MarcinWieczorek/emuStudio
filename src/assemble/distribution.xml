<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeSiteDirectory>false</includeSiteDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:emuLib</include>
        <include>cup:java-cup-runtime</include>
        <include>org.slf4j:slf4j-api</include>
        <include>ch.qos.logback:logback-core</include>
        <include>ch.qos.logback:logback-classic</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${distribution.fileMapping}</outputFileNameMapping>
      <outputDirectory>/compilers</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:as-8080</include>
        <include>net.sf.emustudio:as-z80</include>
        <include>net.sf.emustudio:ramc-ram</include>
        <include>net.sf.emustudio:brainc-brainduck</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${distribution.fileMapping}</outputFileNameMapping>
      <outputDirectory>/devices</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:88-disk</include>
        <include>net.sf.emustudio:88-sio</include>
        <include>net.sf.emustudio:abstractTape-ram</include>
        <include>net.sf.emustudio:adm3A-terminal</include>
        <include>net.sf.emustudio:simhPseudo-z80</include>
        <include>net.sf.emustudio:terminal-brainduck</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${distribution.fileMapping}</outputFileNameMapping>
      <outputDirectory>/mem</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:ram-mem</include>
        <include>net.sf.emustudio:standard-mem</include>
        <include>net.sf.emustudio:brainduck-mem</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${distribution.fileMapping}</outputFileNameMapping>
      <outputDirectory>/cpu</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>net.sf.emustudio:8080-cpu</include>
        <include>net.sf.emustudio:ram-cpu</include>
        <include>net.sf.emustudio:z80-cpu</include>
        <include>net.sf.emustudio:brainduck-cpu</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${distribution.fileMapping}</outputFileNameMapping>
      <outputDirectory>/</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>net.sf.emustudio:emuStudio</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>src/assemble/README.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>src/assemble/COPYING</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>src/assemble/logback.xml</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
</assembly>
